{
    "compilerOptions": {
         "outDir": "dist",
         "target": "es2016",
         "lib": [
            "es2019",
            "dom"
         ],
         "declaration": false,
         "module": "commonjs",
         "noImplicitAny": false,
         "noUnusedLocals": true,
         "noUnusedParameters": false,
         "sourceMap": true,
         "strictNullChecks": false,
         "moduleResolution": "Node",
         "baseUrl": ".",
         "paths": {
               "~/*": ["./*"]
         },
         "allowSyntheticDefaultImports": true
     },
     "ts-node": {
         "transpileOnly": true
     },
     "exclude": [
        "node_modules",
        "./src/**/*.spec.ts"
     ]
}